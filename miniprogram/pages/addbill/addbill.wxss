/* 顶部导航 */
van-sticky{
    background-color: #fddc2d;
    padding: 20rpx 0;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 99;
}

/* 标签页按钮 */
.van-tabs__scroll.van-tabs__scroll--card{ /* 交集选择器 */
    border-radius: 16rpx;
    overflow: hidden;
}
.van-tab{
    background-color: #fddc2d;
}

/* 标签页中的内容 */
.content{
    /* margin-top: 20rpx; */
    padding: 130rpx 40rpx 30rpx;
    background-color: white;
    display: flex;
    flex-wrap: wrap;
}
/* 类目 */
.entry-item{
    flex-basis: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 26rpx;
    color: #444;
    padding: 0 24rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}
.entry-item>view{
    width: 100%;
    border-radius: 50%;
    background-color: #ececec;
    padding: 20rpx;
    box-sizing: border-box;
    margin-bottom:4rpx;
}
.entry-item>view>image{
    width: 78rpx;
    height: 78rpx
}

/* 输入框部份 */
.ipt-box{
    height: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    border-bottom: 1px solid #ddd;
}
.remarks{
    display: flex;
    align-items: center;
    font-size: 26rpx;
}
.remarks text{
    margin-right: 20rpx;
}
.money{
    font-size: 40rpx;
}

/* 键盘部份 */
.van-row{
    height: 210px;
    box-sizing: border-box;
}
.van-col{
    height: 25%;
    line-height: 52px;
    text-align: center;
    border-left: 1px solid #ececec;
    border-top: 1px solid #ececec;
    box-sizing: border-box;
}

van-col:nth-child(-n+4) .van-col{
    border-top: none;
}
van-col:last-child .van-col{
    background-color: #fddc2d;
}
.van-col:active{
    background-color: #ececec;
}