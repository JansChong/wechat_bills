page{
    padding-top: 410rpx;
}

.navbar{
    width: 100%;
    background-color: #fddc2d;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: fixed;
    left: 0;
    top: 0;
    padding: 40rpx 0;
    box-sizing: border-box;
}
.navbar>view{
    display: flex;
}
.navbar picker{
    position: absolute;
    right: 34rpx;
    top: 34rpx;
    color: #444;
}

.navbar .balance{
    color: #444;
    font-size: 24rpx;
}
.navbar .money{
    font-size: 80rpx;
    color: #333;
    margin: 24rpx 0;
}
.navbar .iore{
    color: #555;
    font-size: 26rpx;
}
.navbar .iore .line{
    width: 2rpx;
    height: 46rpx;
    background-color: #333;
    margin: 10rpx 30rpx;
}
.navbar .iore text{
    font-size: 46rpx;
    color: #444;
    margin-left: 20rpx;
}

.list .item{
    height: 70rpx;
    font-size: 24rpx;
    color: #666;
    display: flex;
    align-items: center;
    border-bottom: 0.5px solid #eee;
}
.list .item:first-child{
    width: 100%;
    position: fixed;
    left: 0; 
    top: 340rpx;
    background-color: white;
    z-index: 9;
    
    border-bottom: 0.5px solid #ddd;
}
.list .item>view{
    width: 25%;
    text-align: center;
}
.list .item:not(.first-item)>view:not(.first-index){
    color: balck;
    font-size: 26rpx;
    font-weight: bold;
}