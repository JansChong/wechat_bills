page{
    padding-top: 128rpx;
}
.navbar{
    width: 100%;
    height: 128rpx;
    background-color: #fddc2d;
    padding: 0rpx 30rpx;
    box-sizing: border-box;
    display: flex;
  
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9;
}
.navbar>view{
    width: 30%;
}
.navbar>view:nth-child(2){
    margin-right: 10rpx;
}
.navbar>view .desc{
    color: #333;
    margin-bottom: 24rpx;
    font-size: 24rpx;
}
.navbar>view .datail{
    color: #222;
    font-size: 44rpx;
}
.navbar>view text,
.navbar>view van-icon{
    font-size: 30rpx;
}


/* 单元格组 */
.main van-cell-group>view:last-child{
    margin-bottom: 20rpx;
}
.main van-cell .right_text>view{
    color: #666;
    font-size: 24rpx;
    float: right;
}
.main van-cell .right_text>view:last-child{
    margin-right: 24rpx;
}

.main  .cell_item{
    padding: 0rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
.main  .cell_item .left_img{
    width: 80rpx;
    height: 80rpx;
    margin-right: 30rpx;
    border-radius: 50%;
    
    background-color: #efefef;
    
    display: flex;
    justify-content: center;
    align-items: center;
}
.left_img image{
    width: 75%;
    height: 75%;
}
.main .cell_item .right_text{
    width: 605rpx;
    height: 80rpx;
    padding: 20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;

    font-size: 28rpx;
    color: #333;
}

.main .cell_item:not(:last-of-type) .right_text{
    border-bottom: 0.1px solid #f8f8f8;
}